<div class="container">
  <%= render partial: "templates/users", locals: { user: @user} %>

  <div class="user-card gap-0 flex-col items-start border-card-bio">
    <span class="card-title">Bio</span>
    <span class="user-bio"><%= @user.bio %></span>
  </div>
  
  <% if @recent_posts.any? %>
    <% @recent_posts.each do |recent_post| %>
      <%= render partial: "templates/post_card", locals: { post: recent_post, comments: nil, counter: @counter } %>
      <% @counter = @counter + 1 %>
    <% end %>

    <a
      href="<%= user_posts_path(user_id: @user.id) %>"
      class="load-all-posts" 
      style="width: fit-content;"
    >
      See all posts
    </a>
  <% else %>
    <p>No posts found for this user</p>
  <% end %>
</div>