<% if flash[:alert].present? %>
  <div class="alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with model: @post, url: user_posts_path(user_id: @user.id), class: "user-card flex-col items-start gap-1" do |form| %>
  <%= form.label :title, "Title of the post :" %>
  <%= form.text_field :title %>
  <%= form.label :text, "Post text :" %>
  <%= form.text_area :text, size: "70x5" %>
  <%= form.submit "Add new post" %>
<% end %>
