<a class="user-card gap-0-5 flex-col items-start" href="<%= user_post_path(user_id: post.author_id, id: post.id) %>">
  <span>Post #<%= counter %></span>
  <span class="card-title"><%= post.title %></span>
  <span class="user-bio line-clamp-2"><%= post.text %></span>
  <span class="user-totalpost w-full">
    Comments: <%= post.comments_counter || 0 %>, 
    Likes: <%= post.likes_counter || 0 %>
  </span>

    <% if comments.present? %>
      <% if comments.any? %>
        <%= render partial: "comment_card", locals: {comments: comments} %>
      <% else %>
        <div class="comment-container">
          <div>No comment yet for this post</div>
        </div>
      <% end %>
    <% end %>
</a>