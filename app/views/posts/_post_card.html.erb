<a href="<%= user_post_path(user_id: post.author_id, id: post.id) %>">
  <span><%= post.title %></span>
  <span><%= post.text %></span>
  <span>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></span>
    <% if comments.present? %>
      <% if comments.any? %>
        <%= render partial: "comment_card", locals: {comments: comments} %>
      <% else %>
        <div>
          <div>No comment yet for this post</div>
        </div>
      <% end %>
    <% end %>
</a>